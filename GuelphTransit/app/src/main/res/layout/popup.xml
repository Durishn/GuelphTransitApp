<?xml version="1.0" encoding="utf-8"?>
<!--Created By Jackson Keenan-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/customborder"
    android:orientation="vertical"
    android:weightSum="1"
    android:alpha=".8">

    <TextView
        android:id="@+id/popUpTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1A: University Centre"
        android:textStyle="bold"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/popUpTextViewFirstTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t7:00"
                android:textStyle="bold"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/popUpTextViewTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t 7:20\n\t 7:40"
                android:textStyle="bold"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/dismiss"
        android:layout_width="25dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/closebutton"
        android:background="@android:color/transparent"
        android:layout_gravity="right" />

</LinearLayout>